<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/remix_settings_title" >

    <!-- Sound Settings -->
    <PreferenceScreen
        android:key="remix_sound_settings"
        android:id="@+id/remix_sound_settings"
        android:title="@string/remix_sound_settings_title"
        android:fragment="com.android.settings.remix.SoundSettings"
        android:icon="@drawable/ic_settings_sound" />

    <!--Button Settings -->
    <PreferenceScreen
        android:key="remix_button_settings"
        android:id="@+id/button_settings"
        android:title="@string/button_pref_title"
        android:fragment="com.android.settings.ButtonSettings"
        android:icon="@drawable/ic_settings_buttons" />

    <!-- Interface Settings -->
    <PreferenceScreen
        android:key="remix_interface_settings"
        android:id="@+id/interface_settings"
        android:title="@string/interface_settings_title"
        android:fragment="com.android.settings.remix.InterfaceSettings"
        android:icon="@drawable/ic_settings_interface" />

    <!-- NavigationBar settings
    <PreferenceScreen
        android:key="remix_navbar_settings"
        android:id="@+id/navigation_bar_settings"
        android:title="@string/navigation_bar_title"
        android:icon="@drawable/ic_settings_navbar"
        android:fragment="com.android.settings.simpleaosp.NavigationBarSettings" /> -->

        <!-- Performance -->
        <PreferenceScreen
        android:key="remix_performance_settings"
                android:id="@+id/performance_settings"
                android:title="@string/performance_settings_title"
                android:fragment="com.android.settings.cyanogenmod.PerformanceSettings"
                android:icon="@drawable/ic_settings_performance"
                />

    <!-- Voice wakeup -->
    <PreferenceScreen
        android:key="voice_wakeup"
        android:id="@+id/voice_wakeup_settings"
        android:fragment="com.android.settings.voicewakeup.VoiceWakeupSettings"
        android:title="@string/voice_wakeup_settings_title"
        android:icon="@drawable/ic_voice_wakeup"
        />

    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.liquid.hfm.HfmSettings"
        android:icon="@drawable/ic_adblock" />

    <!-- Screen Recorder -->
    <PreferenceScreen
         android:key="screen_recorder"
         android:title="@string/screen_recorder_title"
         android:fragment="com.android.settings.remix.ScreenRecorderSettings"
         android:icon="@drawable/ic_lock_screen_record" />

<!--    <PreferenceCategory
        android:key="misc_prefs"
        android:title="@string/misc_prefs">

    </PreferenceCategory> -->
</PreferenceScreen>
